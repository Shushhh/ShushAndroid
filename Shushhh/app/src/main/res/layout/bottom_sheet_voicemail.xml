<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_voicemail"
    android:id="@+id/bottomsheet"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true">

    <View
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/voicemailview">

    </View>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addvoicemailtext"
        app:layout_constraintBottom_toBottomOf="@id/voicemailview"
        android:src="@drawable/ic_baseline_voicemail_24"

        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:id="@+id/voicemailimage"
        android:scaleX="1.5"
        android:scaleY="1.5">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_voicemail"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/voicemailimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/voicemailview"
        android:paddingTop="20dp"
        android:fontFamily="@font/rubik_light"
        android:id="@+id/addvoicemailtext"
        >

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>