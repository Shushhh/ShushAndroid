<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/feedbackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rubik"
        android:text="Shush Feedback"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp"/>

    <Button
        android:id="@+id/sendButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="32dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/rubik"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro_feedback_text"
        app:layout_constraintTop_toBottomOf="@id/feedbackTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="We would love your feedback to improve our app!"
        android:textColor="@color/cardview_light_background"
        android:fontFamily="@font/rubik"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewfirst"
        app:layout_constraintTop_toBottomOf="@id/intro_feedback_text"
        android:background="@color/cardview_light_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_type_text"
        app:layout_constraintTop_toBottomOf="@id/viewfirst"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Please select a feeback category below"
        android:textColor="@color/material_on_primary_disabled"
        android:fontFamily="@font/rubik"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/suggestions_button"
        app:layout_constraintTop_toBottomOf="@id/feedback_type_text"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/Widget.MaterialComponents.Button"
        android:text="Suggestions"
        android:textSize="10dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:backgroundTint="@color/colorAccent" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bugs_button"
        app:layout_constraintTop_toBottomOf="@id/feedback_type_text"
        app:layout_constraintLeft_toRightOf="@id/suggestions_button"
        style="@style/Widget.MaterialComponents.Button"
        android:text="Bugs"
        android:textSize="10dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:backgroundTint="@color/colorAccent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compliments_button"
        app:layout_constraintTop_toBottomOf="@id/feedback_type_text"
        app:layout_constraintLeft_toRightOf="@id/bugs_button"
        style="@style/Widget.MaterialComponents.Button"
        android:text="Compliments"
        android:textSize="10dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="32dp"
        android:backgroundTint="@color/colorAccent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewsecond"
        app:layout_constraintTop_toBottomOf="@id/bugs_button"
        android:background="@color/cardview_light_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_below_text"
        app:layout_constraintTop_toBottomOf="@id/viewsecond"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Please leave your feedback below"
        android:textColor="@color/material_on_primary_disabled"
        android:fontFamily="@font/rubik"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        style="@style/Widget.AppCompat.EditText"
        app:layout_constraintTop_toBottomOf="@id/feedback_below_text"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/cardview_light_background"/>




</androidx.constraintlayout.widget.ConstraintLayout>